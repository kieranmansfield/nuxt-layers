{
  "name": "nuxt-layers",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "pnpm -F playground dev",
    "dev:core": "PLAYGROUND_LAYERS=core pnpm -F playground dev",
    "dev:ui": "PLAYGROUND_LAYERS=core,ui pnpm -F playground dev",
    "dev:layout": "PLAYGROUND_LAYERS=core,ui,layout pnpm -F playground dev",
    "dev:motion": "PLAYGROUND_LAYERS=core,motion pnpm -F playground dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "pnpm -r exec rm -rf node_modules .nuxt .output .data && pnpm store prune && pnpm install",
    "cleancache": "pnpm store prune && pnpm store status",
    "update": "ncu -i",
    "nuxtupdate": "npx nuxi@latest upgrade --dedupe --force",
    "nuxiupgrade": "npx nuxi upgrade",
    "update:nuxt-ui": "pnpm up @nuxt/ui --latest --dedupe",
    "update:nuxt-image": "pnpm up @nuxt/image --latest --dedupe",
    "rebuild": "pnpm install && pnpm turbo run build && pnpm turbo run dev",
    "commit:core": "git add layers/core && git commit -m \"chore(core): update\"",
    "commit:ui": "git add layers/ui && git commit -m \"chore(ui): update\"",
    "commit:layout": "git add layers/layout && git commit -m \"chore(layout): update\"",
    "commit:motion": "git add layers/motion && git commit -m \"chore(motion): update\"",
    "commit:root": "git add . && git commit -m \"chore(root): update\"",
    "layer:core": "pnpm turbo run dev --filter core",
    "layer:ui": "pnpm turbo run dev --filter ui",
    "layer:layout": "pnpm turbo run dev --filter layout",
    "layer:motion": "pnpm turbo run dev --filter motion",
    "build:core": "pnpm turbo run build --filter core",
    "build:ui": "pnpm turbo run build --filter ui",
    "build:layout": "pnpm turbo run build --filter layout",
    "build:motion": "pnpm turbo run build --filter motion",
    "layer:generate:core": "pnpm turbo run generate --filter core",
    "layer:generate:ui": "pnpm turbo run generate --filter ui",
    "layer:generate:layout": "pnpm turbo run generate --filter layout",
    "layer:generate:motion": "pnpm turbo run generate --filter motion",
    "layer:rebuild:core": "pnpm build:core && pnpm layer:generate:core && pnpm layer:core",
    "layer:rebuild:ui": "pnpm build:ui && pnpm layer:generate:ui && pnpm layer:ui",
    "layer:rebuild:layout": "pnpm build:layout && pnpm layer:generate:layout && pnpm layer:layout",
    "layer:rebuild:motion": "pnpm build:motion && pnpm layer:generate:motion && pnpm layer:motion",
    "browserlist": "npx update-browserslist-db@latest"
  },
  "keywords": [],
  "author": "Kieran Mansfield",
  "license": "ISC",
  "packageManager": "pnpm@10.29.1",
  "workspaces": [
    "layers/*",
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@culur/config-stylelint": "^1.6.4",
    "@eslint/json": "^1.0.0",
    "@eslint/markdown": "^7.5.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.1",
    "@iconify-json/lucide": "^1.2.89",
    "@nuxt/eslint": "^1.14.0",
    "@nuxt/fonts": "^0.13.0",
    "@nuxt/image": "^2.0.0",
    "@nuxt/ui": "latest",
    "@nuxtjs/device": "^4.0.0",
    "@perplex-digital/stylelint-config": "^17.3.0",
    "@pinia/nuxt": "^0.11.3",
    "@types/node": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vueuse/core": "^14.2.0",
    "@vueuse/nuxt": "^14.2.0",
    "@webgpu/glslang": "^0.0.15",
    "browserslist": "^4.28.1",
    "changesets": "^1.0.2",
    "cypress": "^15.10.0",
    "depcheck": "^1.4.7",
    "eslint": "^10.0.0",
    "eslint-plugin-compat": "^6.1.0",
    "eslint-plugin-glsl": "0.0.0-wip",
    "eslint-plugin-oxlint": "^1.43.0",
    "eslint-plugin-pnpm": "^1.5.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "eslint-plugin-vue": "^10.7.0",
    "npm-check-updates": "^19.3.2",
    "nuxt": "latest",
    "oxlint": "^1.43.0",
    "pinia": "^3.0.4",
    "playwright": "^1.58.2",
    "postcss-html": "^1.8.1",
    "prettier": "^3.8.1",
    "prettier-plugin-css-order": "^2.2.0",
    "prettier-plugin-glsl": "^0.2.3",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-tailwind-styled-components": "^2.0.2",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "stylelint": "^17.1.1",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-config-tailwindcss": "^1.0.1",
    "stylelint-no-unsupported-browser-features": "^8.1.1",
    "stylelint-prettier": "^5.0.3",
    "tailwindcss": "^4.1.18",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3",
    "vite-plugin-checker": "^0.12.0",
    "vitest": "^4.0.18",
    "vue": "latest",
    "vue-tsc": "^3.2.4"
  },
  "browserslist": [
    "last 2 Chrome major versions",
    "last 2 Firefox major versions",
    "last 2 Safari major versions",
    "last 2 Edge major versions"
  ]
}
